{
  "name": "low-vision-accessibility",
  "displayName": "low-vision-accessibility",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "low-vision-accessibility.openAccessibilityPanel",
        "title": "Low Vision: Open Accessibility Settings"
      },
      {
        "command": "low-vision-accessibility.openFontsFolder",
        "title": "Low Vision: Open Fonts Folder"
      }
    ],
    "themes": [
      {
        "label": "GitHub Light Default (Low Vision)",
        "uiTheme": "vs",
        "path": "./themes/light-default.json"
      },
      {
        "label": "GitHub Light High Contrast (Low Vision)",
        "uiTheme": "hc-light",
        "path": "./themes/light-high-contrast.json"
      },
      {
        "label": "GitHub Light Colorblind (Beta) (Low Vision)",
        "uiTheme": "vs",
        "path": "./themes/light-colorblind.json"
      },
      {
        "label": "GitHub Dark Default (Low Vision)",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-default.json"
      },
      {
        "label": "GitHub Dark High Contrast (Low Vision)",
        "uiTheme": "hc-black",
        "path": "./themes/dark-high-contrast.json"
      },
      {
        "label": "GitHub Dark Colorblind (Beta) (Low Vision)",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-colorblind.json"
      },
      {
        "label": "GitHub Dark Dimmed (Low Vision)",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-dimmed.json"
      },
      {
        "label": "GitHub Light (Low Vision)",
        "uiTheme": "vs",
        "path": "./themes/light.json"
      },
      {
        "label": "GitHub Dark (Low Vision)",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "build:themes": "node scripts/build-github-theme.js",
    "build:fonts": "node scripts/build-fonts.js",
    "build:all": "npm run build:themes && npm run build:fonts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3"
  }
}
